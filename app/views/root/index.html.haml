%h1 Welcome to Alexandria
%hr
%h3 Featured books

.row
	- @books.each do |book|
		.span4
			.text-center
				%h4
					=link_to book.title, book
				%i
					%h5= book.subtitle
				.row.visible-phone
					%br
					%img{src: book.google_book_data.img_small, class: "img-polaroid"}
					%hr

.row.hidden-phone
	- @books.each do |book|
		.span4
			.text-center
				%br
				= link_to book do
					%img{src: book.google_book_data.img_small, class: "img-polaroid"}

.row.hidden-phone
	- @books.each do |book|
		.span4
			%br
			%p= truncate(book.google_book_data.description, length: 500)

%hr

%footer.pull-right
	%small
		The library for the 
		%a{href: "https://sse.se.rit.edu"}
			Society of Software Engineers