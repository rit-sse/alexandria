= form_for user do |f|
  -if user.errors.any?
    #error_explanation
      %h2= "#{pluralize(user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_name
    = f.text_field :user_name
  .field
    = f.label :banned
    = f.check_box :banned
  .field
    = f.label :role
    = f.text_field :role
  .actions
    = f.submit 'Save'
