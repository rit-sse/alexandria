{{! If the item is actually a book }}
{{#unless item.more}}
{{#unless item.none}}
<div class="row">
  <div class="col-md-1">
    {{#if item.thumbnail}}
      <img src="{{item.thumbnail}}" class="master-search-thumbnail"/>
    {{/if}}
    {{#unless item.thumbnail}}
      <div class="blank-thumbnail-small"/>
    {{/unless}}
  </div>

  <div class="col-md-3">
    <div>
      {{item.title}}
    </div>

    <div>
      <ul class="commas">
        {{#each item.authors}}
          <li><small><em>
            {{this.first_name}}
            {{this.middle_initial}}
            {{this.last_name}}
          </em></small></li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
{{/unless}}
{{/unless}}

{{! If this is the "More results" placeholder}}
{{#if item.more}}
  <div class="more-results">
    See more...
  </div>
{{/if}}

{{! If there are no results }}
{{#if item.none}}
  No results found
{{/if}}
